<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
  </head>

  <body>
    <div class="container-fluid p-0">
      <div class="row flex-nowrap">
        <main class="col-sm col">
          <div class="d-flex flex-column vh-100">
            {{> navBar }}
            <div id="cesiumContainer" class="flex-grow-1 overflow-auto"></div>
          </div>
        </main>
        {{> logsPanel }}
      </div>
    </div>
    {{> commands/initializeDialog }}
    {{> commands/startDialog }}
    {{> commands/stopDialog }}
    {{> commands/updateDialog }}
    {{> loginDialog }}

    <!-- Exchange Modal -->
    <div class="modal fade" id="exchangeModal" tabindex="-1" aria-labelledby="exchangeModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exchangeModalLabel">Set RabbitMQ Exchange</h5>
          </div>
          <div class="modal-body">
            <input type="text" id="exchangeInput" class="form-control" placeholder="Enter RabbitMQ Exchange name">
          </div>
          <div class="modal-footer">
            <button type="button" id="exchangeSaveBtn" class="btn btn-primary">Save</button>
          </div>
        </div>
      </div>
    </div>
    <!-- End Exchange Modal -->
  </body>
</html>